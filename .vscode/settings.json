{
	"python.defaultInterpreterPath": "./backend/.venv/bin/python",
	"python.terminal.activateEnvironment": true,
	"python.analysis.autoImportCompletions": true,
	"python.analysis.typeCheckingMode": "basic",
	"python.analysis.autoSearchPaths": true,
	"python.analysis.extraPaths": ["./backend"],
	"files.associations": {
		"*.py": "python"
	},
	"python.linting.enabled": true,
	"python.linting.pylintEnabled": false,
	"python.linting.flake8Enabled": true,
	"editor.formatOnSave": true,
	"python.formatting.provider": "black",
	"cursorpyright.analysis.autoImportCompletions": true,
	"cursorpyright.analysis.autoSearchPaths": true,
	"cursorpyright.analysis.extraPaths": ["./backend"],
	"cursorpyright.analysis.typeCheckingMode": "basic",

	"[typescriptreact]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"[typescript]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"workbench.editor.customLabels.patterns": {
		"**/**/index.js": "${dirname} → index.js",
		"**/**/index.ts": "${dirname} → index.ts",
		"**/**/index.tsx": "${dirname} → index.tsx",
		"**/**/styles.tsx": "${dirname} → styles.tsx"
	}
}


